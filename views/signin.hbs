<div class="mb-4 text-center">
  <h1 class="h3 font-weight-normal mb-3">登入</h1>
</div>
<form class="form-signin" action="/signin" method="POST">
  <div class="form-row mb-3">
    <label class="form-label" for="employeeId">員工編號</label>
    <input class="form-control" id="employeeId" type="text" name="employeeId" class="form-control" placeholder="員工編號"
      required autofocus>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="password">密碼</label>
    <input class="form-control" id="password" type="password" name="password" class="form-control"
      placeholder="Password" required>
  </div>
  <button class="btn btn-primary btn-block" type="submit">登入</button>
</form>