<form action="/orderpage/{{order.id}}" method="POST">
  <div class="mb-4 text-center">
    <h1 class="h3 font-weight-normal mb-3">請開始點餐</h1>
  </div>
  <div>
    <h1>{{restaurant.name}}</h1>
    <p>{{restaurant.tel}}</p>
    <p>{{restaurant.address}}</p>
  </div>
  <div class="row mb-3">
    <div class="col-md-6">
      <label class="form-label" for="name">姓名</label>
      <input class="form-control" type="text" name="name" id="name" placeholder="請輸入你的名字" value="{{user.name}}"
        required>
    </div>
    <div class="col-md-6">
      <label class="form-label" for="employeeId">員工編號</label>
      <input class="form-control" type="number" name="employeeId" id="employeeId" placeholder="請輸入員工編號"
        value="{{user.employeeId}}" required>
    </div>
  </div>


  <table class="table align-middle">
    <thead class="thead-dark">
      <tr>
        <th scope="col" style="width: 20%">產品</th>
        <th scope="col" style="width: 20%">價格</th>
        <th scope="col" style="width: 30%">數量</th>
        <th scope="col">說明</th>
      </tr>
    </thead>
    <tbody>
      {{#each meals}}
      <tr>
        <td>{{this.meals}}</td>
        <td>{{this.price}}</td>
        <td>
          <input class="form-control" type="number" name="quantity_{{this.id}}" placeholder="請輸入數量">
          </div>
        </td>
        <td>
          <input class="form-control" type="text" name="description_{{this.id}}" placeholder="請輸入說明">
          </div>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <button type="submit" class="btn btn-primary">送出</button>
  <a class="btn btn-outline-secondary" href="/orderingrest">Back</a>
</form>